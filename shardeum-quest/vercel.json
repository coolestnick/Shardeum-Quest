{
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && CI=false npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "echo 'Skipping root install'",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node"
    },
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}